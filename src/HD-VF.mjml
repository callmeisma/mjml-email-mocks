      <mj-column vertical-align="middle">
        <mj-image src="https://233d8d9d1be77a42cc4e-cb4d167347d4238c9e99ff4a171716c6.ssl.cf1.rackcdn.com/2022/VFF-Logo-Transparent-white.png" alt="Valley Forge Fabrics Logo" align="center" width="100px"></mj-image>
      </mj-column>
      <mj-column vertical-align="middle">
        <mj-text color="white" line-height="1.3" align="center">Valley Forge Fabrics, Inc.</mj-text>
        <mj-text color="white" line-height="1.3" align="center">1650 West McNab Road</mj-text>
        <mj-text color="white" line-height="1.3" align="center">Fort Lauderdale, FL 33309</mj-text>
        <mj-text color="white" line-height="1.3" align="center">(954) 971-1776</mj-text>
